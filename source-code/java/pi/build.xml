<project basedir="." default="build" name="pi">

  <import file="../include/ant/standard.xml" />
  <import file="${targets}/gen-xmlbeans.xml" />

  <property name="gen-proxy.modules" value="Pi" />
  <property name="gen-proxy.matlabOnly" value="true" />
  <property name="gen-proxy.module.Pi.mfilesGenDir" value="${build.top.matlab}/common/build/generated/mfiles" />
  <property name="gen-proxy.module.Pi.mfilesDir" value="${build.top.matlab}/common/build/generated/mfiles" />
  <property name="gen-proxy.module.Pi.classes" value="gov.nasa.kepler.pi.module.io.matlab.MatlabErrorReturn" />

  <target name="compile-pre" depends="gen-xmlbeans" />

  <target name="compile-post" depends="gen-proxy">
    <copy todir="${dist.bin}">
      <fileset dir="python-src" includes="*.py"/>
    </copy>
    <chmod perm="u+x">
      <fileset dir="${dist.bin}" includes="*.py"/>
    </chmod>
  </target>
</project>
